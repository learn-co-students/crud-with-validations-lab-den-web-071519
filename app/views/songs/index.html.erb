<h1>All Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Released?</th>
      <th>Release Year</th>
      <th>Artist Name</th>
      <th>Genre</th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, song_path(song) %></td>
        <td><%= song.released %></td>
        <td><%= song.release_year %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.genre %></td>
        <td><%= button_to "Delete", song, method: :delete, data: {confirm: "Really?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create New Song", new_song_path%>
